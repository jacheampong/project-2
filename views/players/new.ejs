<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    <nav></nav>
    <div class="container">
        <div class="row">
            <div class="col s12 m6">
              <div class="card">
                <h5>Player New Page</h5>
                <div class="card-image">
                  <img class="player-image" src="../images/default.jpg" alt="default image"> <br>
                </div>
                <div class="card-content">
                  <p>
                    <!-- form begins -->
                    <form action="/players" method="POST" >
                        <fieldset>
                            <legend>Player Profile</legend>
                            <label for="name">Name: </label>
                            <input type="text" id="name" name="name" required /> <br>
                            <label for="position">Position: </label>
                            <select name="position" id="position" required class="browser-default">
                                <option value="">--Select a position--</option>
                                <option value="goalkeeper">Goal keeper</option>
                                <option value="defender">Defender</option>
                                <option value="midfielder">Midfielder</option>
                                <option value="attacker">Attacker</option>
                            </select> 
                            <br>
                            <label for="jersey">Jersey #: </label>
                            <input type="text" id="jersey" name="jersey" /> <br>
                            <label for="image">Image: </label>
                            <input type="text" id="image" name="image" /> <br>
                             <br>
                            <label for="isActive">
                                <input type="checkbox" id="isActive" name="isActive" />
                                <span>Active</span>
                              </label>
                        </fieldset>
                        <br>
                        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
                        <a href="/players" class="waves-effect waves-light btn"><i class="material-icons">cancel</i>Cancel</a>
                    </form>
                    <!-- form ends -->
                </div>
              </div>
            </div>
          </div>

        
        

    </div>
    
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>
    
</body>
</html>