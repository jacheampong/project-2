<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    <div class="container blue-text text-darken-4">
        <!-- nav begins -->
        <%- include ('../partials/nav.ejs') %>
        <!-- nav ends -->
        <h3>Team New Page</h3>
        <form action="/teams" method="POST" >
            <fieldset class="blue-text text-darken-4">
                <legend>Team Information</legend>
                <label for="teamName">Name: </label>
                <input type="text" id="teamName" name="teamName" required /> <br>
                <label for="manager">Manager: </label>
                <input type="text" id="manager" name="manager" required /> <br>
                <label for="teamColors">Colors: </label>
                <input type="text" id="teamColors" name="teamColors" required /> <br>
            </fieldset>
                
            <fieldset>
                <legend>Available Players</legend>
                <% players.forEach(player => { %>
                    <p>
                        <label for="<%= player.name %>">
                            <input
                                type="checkbox"
                                id="<%= player.name %>"
                                name="players"
                                value="<%= player.id %>"
                            />
                          <span><%= player.name %>: <%= player.jersey %></span>
                        </label>
                    </p>
                <% }) %>
            </fieldset>
            <br>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
        </form>
        <br>
        <a href="/" class="waves-effect waves-light btn"><i class="material-icons">home</i></a>
    </div>

    <%- include ('../partials/foot.ejs') %>
</body>
</html>